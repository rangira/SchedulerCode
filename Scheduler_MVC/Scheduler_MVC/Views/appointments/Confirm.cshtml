@model  Scheduler_MVC.Models.appointments

@{
    ViewBag.Title = "Details";
}

@*<h2>Details</h2>*@

<div>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "confirm_form" }))
{
    <h4 align="center">Confirm appointment</h4>
    <hr />
    <table class="table" style="border:black ">
        <tr>
            <td>@Html.LabelFor(model => model.appt_date_time, "Appointment Date", htmlAttributes: new { @class = "control-label col-md-2", style = "display: inline;white-space: nowrap" })</td>
            <td>@Html.DisplayFor(model => model.appt_date_time)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.h2, "H2", htmlAttributes: new { @class = "control-label col-md-2" })</td>
            <td>@Html.DisplayFor(model => model.h2)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.notes, "Notes", htmlAttributes: new { @class = "control-label col-md-2" })</td>
            <td>@Html.DisplayFor(model => model.notes)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.appt_type, "Appointment Type", htmlAttributes: new { @class = "control-label col-md-2" })</td>
            <td>@Html.DisplayFor(model => model.appt_type)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Back" id="backBtn" class="btn btn-default" /></td>
            <td><input type="button" value="Submit" id="submitBtn" class="btn btn-default" /></td>
        </tr>
            
    </table>
}
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#backBtn').click(function (e) {
            var model = @Html.Raw(Json.Encode(Model));
            console.log(model);
      });
    </script>
}

