                    }
                    @if (item.appt_type.Trim() == "CM")
                    {
                        @Html.Raw(new HtmlString(Html.ActionLink("RescheduleCM", "CMSchedule", new { id = item.appt_id }).ToString() + "|" + Html.ActionLink("Cancel", "Cancel", new { id = item.appt_id }).ToString()));


